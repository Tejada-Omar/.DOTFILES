#!/bin/zsh
# Dotfiles management
alias config='git --git-dir=$HOME/.DOTFILES/ --work-tree=$HOME'

# Command shortcuts
alias ls='exa'
alias n='nvim'
alias p='pacman'
alias pa='sudo pacman'
alias s='systemctl'
alias sy='sudo systemctl'
alias z='zathura --fork'
alias open='xdg-open'

# One-liner shortcuts
alias battery='upower -i $(upower -e | grep '/battery') | grep -E "state|\ time|\ full|to\ empty|percentage"'
alias cdf='cd $(fd -H -t f . '/home/omar' | fzf --preview "bat --style=header-filename,header-filesize -r 40: --color=always {}" | xargs dirname)'
alias cdfa='cd $(fd -H -t f . '/home/omar' '/etc' '/usr' | fzf --preview "bat --style=header-filename,header-filesize -r 40: --color=always {}" | xargs dirname)'
alias cdd='cd $(fd -H -t d . '/home/omar' | fzf --preview "exa -lF --no-permissions {}")'
alias cdda='cd $(fd -H -t d . '/home/omar' '/etc' '/usr' | fzf --preview "exa -lF --no-permissions {}")'
alias reflectorupdate='reflector --latest 20 --sort rate --protocol https --save /etc/pacman.d/mirrorlist'
alias keychron='sudo systemctl start keychron'
alias clipqrcode='xclip -sel clip -o | qrencode -t ansiutf8'
alias browse-pacman="pacman -Qq | fzf --preview 'pacman -Qil {}' --layout=reverse --bind 'enter:execute(pacman -Qil {} | less)'"
alias browse-pacman-online="pacman -Slq | fzf --preview 'pacman -Si {}' --layout=reverse"

# Functions for positional arguments
wcnopythondocs() {
  sed 's/^[ \t]*//g' "$1" | rg -v '^#' | wc -l
}
